rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow any user (authenticated or unauthenticated) to read product data.
    match /products/{productId} {
      allow read: if true;
    }

    // Allow authenticated users to manage their own user documents
    match /users/{userId} {
      // A user can create their own document (e.g., when signing up)
      allow create: if request.auth.uid == userId;
      // A user can read their own document (e.g., to get their full name, username, guest ID)
      allow read: if request.auth.uid == userId;
      // A user can update their own document (e.g., changing profile info, but not isGuest)
      allow update: if request.auth.uid == userId && !(request.resource.data.isGuest is bool);
      // Deny delete
      allow delete: if false;
    }

    // Rule for the guest ID counter.
    // WARNING: This allows anyone to update the counter.
    // For production, this 'update' should ideally be managed by a Cloud Function.
    match /settings/guestCounter {
      allow read: if true; // Allow reading the current count
      allow update: if true; // Allow client to update the count (TEMPORARY - INSECURE FOR PRODUCTION)
    }

    // Catch-all rule: Deny all reads and writes for any other collections or documents not explicitly allowed above.
    match /{document=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
